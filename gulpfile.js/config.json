{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "javascripts",
      "dest": "js",
      "files": [
          {
            "source": ["src/javascripts/S3-prepare.js"],
            "filename": "S3-prepare.js"
          },{
              "source": ["src/javascripts/modernizr.custom.45448.js", "src/javascripts/S3-enhance.js"],
              "filename": "S3-enhance.js"
          },{
            "source": ["src/javascripts/S3-slider.js"],
            "filename": "S3-slider.js"
          }
      ],
      "extensions": ["js"]
    },

    "css": {
      "src": "stylesheets",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": ["./node_modules"]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "html",
      "dest": "./",
      "partialData": ["html", "json"],
      "dataFiles": ["./src/html/data/*.json", "!**/global.json"],
      "templatePaths": ["./src/html"],
      "templateFiles": ["./src/html/**/*.html","!**/{layouts,shared,macros,data}/**"],
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    },

    "production": {
      "rev": true
    }
  }
}
